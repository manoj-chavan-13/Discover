{
  "version": 2,
  "builds": [
    {
      "src": "app.js",  
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/search",
      "methods": ["POST"],
      "dest": "/app.js"  
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1" 
    },
    {
      "src": "/",
      "dest": "/public/index.html" 
    }
  ]
}
